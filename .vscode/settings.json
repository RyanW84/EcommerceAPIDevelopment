{
    // Solution and project settings
    "dotnet.defaultSolution": "ECommerceApp.RyanW84.sln",

    // .NET 10.0 specific settings - use modern language server instead of OmniSharp
    "dotnet.server.useOmnisharp": false,
    "omnisharp.useModernNet": true,
    "dotnetAcquisitionExtension.allowInvalidPaths": true,

    // Enable advanced IntelliSense features for .NET 10.0
    "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
    "dotnet.codeLens.enableReferencesCodeLens": true,
    "dotnet.codeLens.enableTestsCodeLens": true,

    // Inlay hints for better code readability
    "dotnet.inlayHints.enableInlayHintsForParameters": true,
    "dotnet.inlayHints.enableInlayHintsForLiteralParameters": true,
    "dotnet.inlayHints.enableInlayHintsForIndexerParameters": true,
    "dotnet.inlayHints.enableInlayHintsForObjectCreationParameters": true,
    "dotnet.inlayHints.enableInlayHintsForOtherParameters": true,
    "dotnet.inlayHints.enableInlayHintsForTypes": true,
    "dotnet.inlayHints.enableInlayHintsForImplicitVariableTypes": true,
    "dotnet.inlayHints.enableInlayHintsForLambdaParameterTypes": true,
    "dotnet.inlayHints.enableInlayHintsForImplicitObjectCreation": true,

    // Enhanced C# language features - Microsoft Standards
    "csharp.semanticHighlighting.enabled": true,
    "csharp.format.enable": true,
    "csharp.suppressHiddenDiagnostics": false,
    "csharp.showOmnisharpLogOnError": true,

    // Roslyn analyzers and editor config support
    "omnisharp.enableRoslynAnalyzers": true,
    "omnisharp.enableEditorConfigSupport": true,

    // File associations for .NET
    "files.associations": {
        "*.cs": "csharp",
        "*.csx": "csharp",
        "*.cake": "csharp",
        "*.cshtml": "html",
        "*.razor": "razor"
    },

    // Editor settings optimized for C# and .NET 10.0 - Microsoft Standards
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        // Microsoft standard code cleanup actions on save
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit",
        "source.removeUnnecessaryImports": "explicit",
        "source.sortImports": "explicit",
        "source.addMissingImports": "explicit"
    },

    // Microsoft C# formatting standards
    "dotnet.format.enable": true,
    "dotnet.completion.showNameCompletionSuggestions": true,
    "dotnet.backgroundAnalysis.analyzerDiagnosticsScope": "fullSolution",
    "dotnet.backgroundAnalysis.compilerDiagnosticsScope": "fullSolution",

    // IntelliSense optimization
    "editor.suggest.insertMode": "replace",
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.acceptSuggestionOnEnter": "on",

    // Debug settings
    "debug.allowBreakpointsEverywhere": true,
    "debug.showInlineBreakpointCandidates": true,

    // Terminal settings for .NET commands
    "terminal.integrated.env.linux": {
        "DOTNET_CLI_TELEMETRY_OPTOUT": "1"
    },

    // File explorer and search exclusions
    "files.exclude": {
        "**/bin": true,
        "**/obj": true,
        "**/.vs": true
    },
    "search.exclude": {
        "**/bin": true,
        "**/obj": true,
        "**/.vs": true,
        "**/node_modules": true
    },
    "dotnet.unitTestDebuggingOptions": {},
    "cSpell.words": [
        "Anytown",
        "appsettings",
        "ASPNETCORE",
        "buildtransitive",
        "Clientside",
        "contentfiles",
        "createdat",
        "createdon",
        "customername",
        "datetimeoffset",
        "localdb",
        "mssqllocaldb",
        "nvarchar",
        "onprem",
        "previewlanguage",
        "projitems",
        "saledate",
        "Swashbuckle",
        "totalamount",
        "xunit"
    ]
}
